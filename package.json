{
  "name": "teslaterm",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc && webpack",
    "watch": "cross-var tsc -w",
    "lint": "cross-var tslint -c tslint.json -p tsconfig.json",
    "start-electron": "npm run build && cross-var electron . --no-sandbox",
    "start-node": "npm run build && node js/main/main_node.js",
    "install": "electron-rebuild",
    "install-electron": "cd node_modules/@serialport/bindings && prebuild-install --tag-prefix @serialport/bindings@ -r electron",
    "install-node": "cd node_modules/@serialport/bindings && prebuild-install --tag-prefix @serialport/bindings@ -r node",
    "package-electron": "cross-var electron-builder --windows nsis",
    "pkg-node": "cross-var pkg --out-path=dist/node package.json",
    "pkg-rename": "cross-var mv dist/node/teslaterm-linux dist/node/ud3-node && cross-var mv dist/node/teslaterm-win.exe dist/node/ud3-node.exe",
    "package-node": "npm run pkg-node && npm run pkg-rename",
	"postinstall": "electron-builder install-app-deps",
	"app:dir": "electron-builder --dir",
	"app:dist": "electron-builder"
  },
  "main": "js/main/main_electron.js",
  "bin": "js/main/main_node.js",
  "dependencies": {
    "@serialport/bindings": "9.2.0",
    "@types/fs-extra": "^9.0.7",
    "ini": "^1.3.5",
    "jquery": "^3.5.1",
    "jspack": "0.0.4",
    "jszip": "^3.5.0",
    "justgage": "^1.3.5",
    "jzz": "^0.6.9",
    "midi-player-js": "^2.0.13",
    "node-abi": "",
    "rtpmidi": "^1.0.0",
    "serialport": "^9.2.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.78",
    "@types/ini": "^1.3.30",
    "@types/jquery": "^3.3.38",
    "@types/microtime": "^2.1.0",
    "@types/node": "^14.14.33",
    "@types/serialport": "^8.0.1",
    "@types/socket.io": "^2.1.8",
    "@types/socket.io-client": "^1.4.33",
    "@types/w2ui": "^1.4.32",
    "@types/webmidi": "^2.0.4",
    "cross-var": "",
    "electron":"",
    "electron-builder": "",
    "electron-rebuild": "",
    "node": "",
    "npm": "",
    "pkg": "",
    "prebuild-install": "",
    "ts-loader": "",
    "tslint": "",
    "tslint-no-circular-imports": "",
    "typescript": "",
    "webpack": "",
    "webpack-cli": ""
  },
  "build": {
    "appId": "teslaterm",
    "win": {
      "artifactName": "electron/${productName}-win.${ext}"
    },
    "linux": {
      "artifactName": "electron/${productName}-linux.${ext}"
    },
	"nsis": {
		"oneClick": false,
		"perMachine": false,
		"allowElevation": true,
		"allowToChangeInstallationDirectory": true
	}
  },
  "pkg": {
    "assets": [
      "index_node.html",
      "dist/bundle.js",
      "libs/*",
      "styles/*",
      "node_modules/raphael/raphael.js",
      "node_modules/jquery/dist/jquery.min.js"
    ]
  }
}
