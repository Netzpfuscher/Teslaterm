{
  "name": "teslaterm",
  "version": "0.1.0",
  "main": "index.html",
  "chromium-args": "--mixed-context",
  "window": {
    "width": 1024,
    "height": 768
  },
  "permissions": [
    "serial",
    {
      "fileSystem": [
        "write"
      ]
    }
  ],
  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": ":56789"
    }
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "justgage": "^1.2.2",
    "jzz": "^0.6.6",
    "midi-player-js": "^2.0.5",
    "npm": "6.5.0",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/chrome": "0.0.78",
    "@types/jquery": "^3.3.29",
    "@types/node": "^10.12.18",
    "@types/w2ui": "^1.4.32",
    "@types/webmidi": "^2.0.2",
    "nwjs-builder-phoenix": "^1.15.0"
  },
  "build": {
    "nwVersion": "0.35.5",
    "files": [
      "styles/**",
      "fontawesome-all.js",
      "raphael*",
      "js/**",
      "libs/**",
      "index.html",
      "config.ini",
      "package.json",
      "node_modules/**"
    ]
  },
  "scripts": {
    "dist": "tsc;build --tasks linux-x64,win-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "tsc;run --x64 --mirror https://dl.nwjs.io/ ."
  }
}
